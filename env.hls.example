# Configuration HLS Transcoder pour Atiha
# Copiez ce fichier vers .env.local pour l'utiliser

# Configuration du serveur de transcodage HLS
HLS_TRANSCODER_URL=http://localhost:8080
HLS_TRANSCODER_ENABLED=true
HLS_DEFAULT_QUALITY=auto
HLS_DEFAULT_PRESET=fast

# Configuration pour différents environnements
# Development
HLS_DEV_SERVER_URL=http://localhost:8080
HLS_DEV_ENABLED=true

# Production (remplacez par votre URL de production)
HLS_PROD_SERVER_URL=https://your-hls-server.com
HLS_PROD_ENABLED=true

# Docker
HLS_DOCKER_SERVER_URL=http://hls-transcoder:8080
HLS_DOCKER_ENABLED=true

# Configuration avancée
HLS_ACCESS_GRACE=600
HLS_TRANSCODE_GRACE=5
HLS_PROBE_TIMEOUT=600
HLS_AAC_CODEC=libfdk_aac

# Logs
HLS_DEBUG=false
HLS_LOG_LEVEL=info
