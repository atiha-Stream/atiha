# Configuration de l'application Atiha
# ⚠️ Ce fichier est un exemple - copier vers .env.local et remplir les valeurs

# ============================================
# VARIABLES REQUISES (OBLIGATOIRES)
# ============================================

# Identifiants admin (OBLIGATOIRE)
# ⚠️ NE JAMAIS utiliser NEXT_PUBLIC_* pour ces variables
ADMIN_USERNAME=leGenny
ADMIN_PASSWORD=your_secure_admin_password_here
ADMIN_SECURITY_CODE=your_secure_security_code_here

# ============================================
# BASE DE DONNÉES PostgreSQL (Prisma)
# ============================================

# URL de connexion directe PostgreSQL (OBLIGATOIRE pour Prisma)
DATABASE_URL=postgres://user:password@host:port/database?sslmode=require

# URL PostgreSQL (identique à DATABASE_URL)
POSTGRES_URL=postgres://user:password@host:port/database?sslmode=require

# URL Prisma avec Accelerate (connection pooling - recommandé pour la production)
# Utilisez cette URL pour de meilleures performances en production
PRISMA_DATABASE_URL=prisma+postgres://accelerate.prisma-data.net/?api_key=YOUR_API_KEY

# ============================================
# BASE DE DONNÉES MongoDB (si utilisée)
# ============================================

MONGODB_URI=mongodb://localhost:27017/atiha
MONGODB_TEST_URI=mongodb://localhost:27017/atiha_test

# ============================================
# REDIS (Cache et Rate Limiting)
# ============================================

# URL de connexion Redis (optionnel - l'application fonctionne sans Redis)
# Format: redis://[:password@]host:port ou rediss://[:password@]host:port (avec TLS)
REDIS_URL=redis://localhost:6379

# Variables alternatives pour construire REDIS_URL
# Si REDIS_URL n'est pas définie, ces variables seront utilisées
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_TLS=false

# ============================================
# JWT ET SÉCURITÉ
# ============================================

JWT_SECRET=your_super_secret_jwt_key_here_change_in_production
JWT_EXPIRE=7d

# Clé de chiffrement (256 bits)
ENCRYPTION_KEY=your_32_character_encryption_key_here

# ============================================
# SERVEUR
# ============================================

PORT=5000
NODE_ENV=development

# ============================================
# CORS
# ============================================

CLIENT_URL=http://localhost:3000

# ============================================
# FICHIERS
# ============================================

UPLOAD_PATH=./uploads
MAX_FILE_SIZE=100000000

# ============================================
# EMAIL (optionnel)
# ============================================

EMAIL_SERVICE=gmail
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# ============================================
# FRONTEND (peuvent être publiques)
# ============================================

NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=Atiha
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_IMAGE_BASE_URL=http://localhost:5000
REACT_APP_VIDEO_BASE_URL=http://localhost:5000

